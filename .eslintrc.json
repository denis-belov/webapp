{
	"parser": "@babel/eslint-parser",

	"parserOptions": {

		"ecmaVersion": 12,
		"sourceType": "module",

		"babelOptions": {
			"configFile": "/home/denis/reps/denis-belov/webapp/babel.config.js"
		}
	},

	"extends": [

		"strict",
		"strict-react/es6"
	],

	"env": {

		"browser": true,
		"node": true,
		"es2021": true
	},

	"rules": {

		"indent": [ "error", "tab" ],
		"func-style": [ "error", "expression" ],
		"brace-style": [ "error", "stroustrup" ],
		"no-tabs": 0,
		"no-console": 0,
		"array-element-newline": 0,
		"array-bracket-newline": 0,
		"camelcase": 0,
		"id-length": 0,
		"id-match": 0,
		"padded-blocks": 0,
		"space-before-function-paren": 0,
		"no-multiple-empty-lines": 0,
		"complexity": 0,
		"no-sync": 0,
		"no-underscore-dangle": 0,

		"react/jsx-indent": [ "error", "tab" ],
		"react/jsx-indent-props": [ "error", "tab" ]
	}
}
